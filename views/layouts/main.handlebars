    tileSize: 512,
    zoomOffset: -1,
    accessToken: 'pk.eyJ1Ijoia2F0eW5pY29sZTg5IiwiYSI6ImNrdWZ1Y3U4NTF4d20zMnE2cHg4ZXlvbjMifQ.gPzb838kgasGqX8geNXo2g'
}).addTo(mymap);
